---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Bat Portfolio" description="Portfolio di uno sviluppatore fullstack">
  <main id="app">
    <!-- Spotlight Search Intro (coming next) -->
    <section id="intro" class="intro-section">
      <p class="intro-text">Cercami</p>
    </section>

    <!-- Main Content (hidden until intro complete) -->
    <div id="content" class="content-wrapper" aria-hidden="true">
      <section class="hero">
        <h1>Benvenuto</h1>
        <p>Portfolio in costruzione...</p>
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  .intro-section {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-bg-primary);
    z-index: var(--z-spotlight);
  }

  .intro-text {
    font-family: var(--font-display);
    font-size: clamp(2rem, 8vw, 5rem);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.3em;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.4; }
    50% { opacity: 1; }
  }

  .content-wrapper {
    opacity: 0;
    visibility: hidden;
    transition: opacity var(--transition-slow), visibility var(--transition-slow);
  }

  .content-wrapper.visible {
    opacity: 1;
    visibility: visible;
  }

  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-xl);
  }

  .hero h1 {
    color: var(--color-accent);
    margin-bottom: var(--space-md);
  }
</style>
