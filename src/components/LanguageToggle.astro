<button 
  id="lang-toggle" 
  class="fixed top-6 left-6 z-[800] flex items-center gap-2 px-3 py-1.5 rounded-full bg-black/40 border border-white/10 hover:border-[#ffd700] hover:bg-[#ffd700]/10 transition-all backdrop-blur-md group"
  aria-label="Switch Language"
>
    <!-- Globe Icon -->
    <svg class="w-4 h-4 text-gray-400 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <span id="lang-text" class="text-xs font-mono font-bold text-gray-400 group-hover:text-white transition-colors">IT</span>
</button>

<script>
    const btn = document.getElementById('lang-toggle');
    const label = document.getElementById('lang-text');
    
    // Simple state
    let currentLang = 'it';

    const updateUI = () => {
        if (!label) return;
        label.textContent = currentLang.toUpperCase();
        document.documentElement.lang = currentLang;
        
        // Dispatch event for other components if needed
        window.dispatchEvent(new CustomEvent('lang-change', { detail: currentLang }));
    };

    const toggleLang = () => {
        currentLang = currentLang === 'it' ? 'en' : 'it';
        localStorage.setItem('lang', currentLang);
        updateUI();
    };

    const init = () => {
        // Load persistence or detect
        const saved = localStorage.getItem('lang');
        if (saved) {
            currentLang = saved;
        } else {
            const browserLang = navigator.language.slice(0, 2);
            if (browserLang === 'en') currentLang = 'en';
        }
        updateUI();
    };

    // Initialize
    init();
    btn?.addEventListener('click', toggleLang);
    
    // Re-bind on view transitions if using Astro 
    document.addEventListener('astro:page-load', () => {
        const newBtn = document.getElementById('lang-toggle');
        newBtn?.addEventListener('click', toggleLang);
        init(); // Resync UI
    });
</script>
