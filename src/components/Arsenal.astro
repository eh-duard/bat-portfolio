---
import DualContent from './DualContent.astro';

const skills = [
  { name: 'JavaScript / TypeScript', batName: 'Neural Networks', level: '98%', icon: 'JS' },
  { name: 'React / Next.js', batName: 'WayneTech UI', level: '95%', icon: 'RX' },
  { name: 'Node.js', batName: 'Batcomputer Core', level: '92%', icon: 'ND' },
  { name: 'CSS / Tailwind', batName: 'Tactical Suit', level: '99%', icon: 'CS' },
  { name: 'PostgreSQL', batName: 'Criminal Records', level: '88%', icon: 'DB' },
  { name: 'Docker / DevOps', batName: 'Containment', level: '85%', icon: 'DX' }
];
---

<section id="arsenal" class="py-20 md:py-32 px-4 w-full relative on-scroll">
  <div class="container mx-auto max-w-6xl">
    
    <DualContent>
      <!-- DEV MODE CONTENT -->
      <div slot="dev">
        <div class="text-center mb-16 space-y-4">
            <h2 class="text-3xl md:text-5xl font-bold tracking-tight" data-i18n="arsenal.title">Technical Proficiency</h2>
            <p class="text-gray-400 max-w-2xl mx-auto" data-i18n="arsenal.subtitle">A curated stack of modern technologies for building heavy-duty applications.</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 md:gap-8">
            {skills.map(skill => (
                <div class="group relative bg-[#111] border border-white/5 rounded-2xl p-8 hover:bg-[#161616] transition-all duration-300 hover:transform hover:-translate-y-1 hover:shadow-xl hover:shadow-white/5">
                    <div class="flex items-start justify-between mb-8">
                         <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center text-xl font-bold text-gray-300 group-hover:text-white group-hover:bg-white/10 transition-colors">
                            {skill.icon}
                         </div>
                         <span class="text-xs font-mono text-gray-500 group-hover:text-gray-300 transition-colors">{skill.level}</span>
                    </div>
                    <h3 class="text-lg font-medium text-gray-200 group-hover:text-white mb-2">{skill.name}</h3>
                    <div class="w-full h-1 bg-gray-800 rounded-full overflow-hidden">
                        <div class="h-full bg-white opacity-50 w-0 group-hover:w-full transition-all duration-1000 ease-out"></div>
                    </div>
                </div>
            ))}
        </div>
      </div>

      <!-- BATMAN MODE CONTENT -->
      <div slot="batman">
        <div class="flex items-center justify-between mb-16 border-b border-[#ffd700]/30 pb-6">
             <div class="flex items-center gap-4">
                <div class="w-2 h-8 bg-[#ffd700] animate-pulse"></div>
                <h2 class="text-3xl md:text-4xl font-display text-[#ffd700] tracking-[0.2em] uppercase text-shadow" data-i18n="arsenal.batTitle">Tactical Arsenal</h2>
             </div>
             <div class="text-[#b8860b] font-mono text-xs blink border border-[#b8860b] px-3 py-1" data-i18n="arsenal.sysReady">SYS.READY</div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {skills.map((skill, index) => (
                <div class="group relative bg-black/60 border border-[#333] hover:border-[#ffd700] transition-all duration-300 overflow-hidden">
                    <!-- Technical grid background -->
                    <div class="absolute inset-0 bg-[url('/bat-portfolio/grid.svg')] opacity-10"></div>
                    
                    <!-- Scanline effect that moves on hover -->
                    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[#ffd700]/10 to-transparent translate-y-[-100%] group-hover:translate-y-[100%] transition-transform duration-700 ease-linear"></div>
                    
                    <div class="relative p-6 space-y-4">
                        <div class="flex justify-between items-center text-[#555] font-mono text-xs group-hover:text-[#ffd700] transition-colors">
                            <span>MK-{index + 1}</span>
                            <span>{skill.icon}-PROTO</span>
                        </div>
                        
                        <div class="py-4 text-center">
                            <h3 class="text-2xl font-display text-gray-300 group-hover:text-white tracking-wider">{skill.batName}</h3>
                            <p class="text-[10px] font-mono text-[#666] uppercase mt-2 group-hover:text-[#ffd700] tracking-widest">({skill.name})</p>
                        </div>

                        <!-- Progress Bar Tech Style -->
                        <div class="space-y-1">
                            <div class="flex justify-between text-[10px] font-mono text-[#444] group-hover:text-[#ffd700]">
                                <span data-i18n="arsenal.efficiency">EFFICIENCY</span>
                                <span>{skill.level}</span>
                            </div>
                            <div class="w-full h-1 bg-[#222] border border-[#333]">
                                <div class="h-full bg-[#ffd700] w-[50%] group-hover:w-[90%] transition-all duration-1000 ease-out relative">
                                    <div class="absolute right-0 top-0 bottom-0 w-1 bg-white animate-pulse"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
      </div>
    </DualContent>

  </div>
</section>

<style>
  .blink { animation: blinker 2s linear infinite; }
  @keyframes blinker { 50% { opacity: 0; } }
  .text-shadow { text-shadow: 0 0 10px rgba(255, 215, 0, 0.5); }
</style>
