---
import DualContent from './DualContent.astro';

const baseUrl = import.meta.env.BASE_URL.endsWith('/') 
  ? import.meta.env.BASE_URL 
  : import.meta.env.BASE_URL + '/';
---

<section id="about" class="py-20 md:py-32 px-4 w-full max-w-[100vw] relative z-10 on-scroll overflow-hidden box-border">
  <div class="container mx-auto max-w-6xl">
    
    <DualContent>
      <!-- DEV MODE CONTENT -->
      <div slot="dev" class="grid grid-cols-1 md:grid-cols-12 gap-8 md:gap-16 items-center w-full max-w-full">
        <!-- Profile Photo -->
        <div class="col-span-12 md:col-span-5 hidden md:flex justify-center md:justify-end order-2 md:order-1 relative md:mt-0">
            <div class="relative w-48 h-60 md:w-56 md:h-72">
                <div class="absolute inset-0 bg-gradient-to-tr from-gray-800 to-gray-900 rounded-2xl transform rotate-6 border border-white/5"></div>
                <div 
                    class="absolute inset-0 rounded-2xl transform -rotate-3 border border-white/10 overflow-hidden shadow-2xl bg-cover bg-center bg-no-repeat"
                    style={`background-image: url('${baseUrl}images/propic.jpg')`}
                ></div>
            </div>
        </div>

        <div class="col-span-12 md:col-span-7 order-1 md:order-2 space-y-8 max-w-full overflow-hidden">
          <div class="space-y-4">
              <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase" data-i18n="about.label">About</h3>
              <h2 class="text-2xl md:text-5xl font-bold tracking-tight text-white leading-tight break-words">
                <span data-i18n="about.title1">Where Logic</span> <br/> <span class="text-transparent bg-clip-text bg-gradient-to-r from-gray-200 to-gray-500" data-i18n="about.title2">Meets Design.</span>
              </h2>
          </div>
          <p class="text-lg text-gray-400 leading-relaxed font-light break-words w-full max-w-full" style="overflow-wrap: anywhere;" data-i18n="about.text">
            Full Stack Developer focused on clean architecture, performance optimization, and intuitive user experiences. 
            I build applications that are both technically solid and visually refined.
          </p>
          <div class="flex flex-col sm:flex-row flex-wrap gap-4 pt-4 justify-center md:justify-start w-full max-w-full">
            <div class="px-3 py-3 md:px-6 md:py-4 bg-white/5 border border-white/10 rounded-lg w-full sm:flex-1 min-w-0 max-w-full text-center md:text-left box-border">
                <span class="block text-2xl font-bold text-white">4+</span>
                <span class="text-xs text-gray-500 uppercase tracking-widest" data-i18n="about.years">Years Exp</span>
            </div>
            <div class="px-3 py-3 md:px-6 md:py-4 bg-white/5 border border-white/10 rounded-lg w-full sm:flex-1 min-w-0 max-w-full text-center md:text-left box-border">
                <span class="block text-2xl font-bold text-white">15+</span>
                <span class="text-xs text-gray-500 uppercase tracking-widest" data-i18n="about.projects">Projects</span>
            </div>
            <div class="px-3 py-3 md:px-6 md:py-4 bg-white/5 border border-white/10 rounded-lg flex-1 min-w-0 max-w-full text-center md:text-left">
                <span class="block text-2xl font-bold text-white">3</span>
                <span class="text-xs text-gray-500 uppercase tracking-widest" data-i18n="about.companies">Companies</span>
            </div>
          </div>
        </div>
      </div>

      <!-- BATMAN MODE CONTENT -->
      <div slot="batman" class="space-y-12 text-center md:text-left">
         <div class="border-y border-[#ffd700] py-16 relative bg-[#050505] bg-opacity-80 backdrop-blur-sm">
            <!-- Decorative Tech Lines -->
            <div class="absolute top-0 left-10 w-px h-16 bg-[#ffd700]"></div>
            <div class="absolute bottom-0 right-10 w-px h-16 bg-[#ffd700]"></div>

            <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-[#000] px-6 py-1 border border-[#ffd700] text-[#ffd700] tracking-[0.3em] text-xs font-mono uppercase shadow-[0_0_15px_#ffd70040]" data-i18n="about.record">
                Profile: CLASSIFIED
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center px-8">
                <div class="relative group mx-auto md:mx-0">
                    <div 
                        class="w-64 h-80 border-2 border-[#ffd700] relative overflow-hidden grayscale contrast-125 transition-all duration-500 shadow-[0_0_30px_rgba(0,0,0,0.8)] group-hover:grayscale-0 bg-cover bg-top bg-no-repeat"
                        style={`background-image: url('${baseUrl}images/avatar.png'); background-color: #e8e8e8`}
                    >
                        <div class="absolute inset-0 bg-[linear-gradient(transparent_0%,rgba(255,215,0,0.1)_50%,transparent_100%)] bg-[length:100%_4px] animate-scanline pointer-events-none"></div>
                        
                        <div class="absolute bottom-0 left-0 right-0 bg-[#ffd700]/10 p-2 border-t border-[#ffd700]">
                            <p class="text-[#ffd700] font-mono text-[10px] uppercase text-center" data-i18n="about.nomatch">Access Restricted</p>
                        </div>
                    </div>
                </div>

                <div class="space-y-8">
                    <h3 class="font-display text-4xl text-white mb-2 border-l-4 border-[#ffd700] pl-6" data-i18n="about.origin">BACKGROUND</h3>
                    <div class="text-[#a0a0a0] font-mono text-sm leading-8 space-y-4">
                        <p data-i18n="about.log">> PROFILE #492<br/>
                        > STATUS: VERIFIED DEVELOPER<br/>
                        > CLEARANCE: FULL ACCESS</p>
                        <p class="pl-4 border-l border-gray-700" data-i18n="about.quote">
                            "Methodical approach to complex problems. Clean code, clear solutions. 
                            When the deadline looms, he delivers."
                        </p>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-6 mt-8">
                        <div class="border border-[#ffd700]/30 p-4 bg-[#ffd700]/5 relative overflow-hidden">
                            <h4 class="text-[#ffd700] text-[10px] tracking-[0.2em] mb-1" data-i18n="about.base">LOCATION</h4>
                            <p class="text-white font-display text-lg" data-i18n="about.cave">REMOTE</p>
                            <div class="absolute bottom-0 right-0 w-4 h-4 border-b border-r border-[#ffd700]"></div>
                        </div>
                        <div class="border border-[#ffd700]/30 p-4 bg-[#ffd700]/5 relative overflow-hidden">
                            <h4 class="text-[#ffd700] text-[10px] tracking-[0.2em] mb-1" data-i18n="about.status">STATUS</h4>
                            <p class="text-white font-display text-lg animate-pulse" data-i18n="about.active">AVAILABLE</p>
                            <div class="absolute bottom-0 right-0 w-4 h-4 border-b border-r border-[#ffd700]"></div>
                        </div>
                    </div>
                </div>
            </div>
         </div>
      </div>
    </DualContent>
  </div>
</section>

<style>
  .animate-scanline {
    animation: scanline 2s linear infinite;
  }
  @keyframes scanline {
    0% { transform: translateY(-100%); }
    100% { transform: translateY(100%); }
  }
</style>
