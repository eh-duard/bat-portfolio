---
import BaseLayout from '../layouts/BaseLayout.astro';
import SpotlightSearch from '../components/SpotlightSearch.astro';
import AudioController from '../components/AudioController.astro';
---

<BaseLayout title="Bat Portfolio" description="Portfolio di uno sviluppatore fullstack">
  <main id="app">
    <!-- Spotlight Search Intro -->
    <SpotlightSearch searchText="Cercami" foundText="Mi hai trovato!" />

    <!-- Audio Controller -->
    <AudioController />

    <!-- Main Content (hidden until intro complete) -->
    <div id="content" class="content-wrapper" aria-hidden="true">
      <section class="hero">
        <h1>Benvenuto</h1>
        <p>Portfolio in costruzione...</p>
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  .content-wrapper {
    opacity: 0;
    visibility: hidden;
    transition: opacity var(--transition-slow), visibility var(--transition-slow);
  }

  .content-wrapper.visible {
    opacity: 1;
    visibility: visible;
  }

  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-xl);
  }

  .hero h1 {
    color: var(--color-accent);
    margin-bottom: var(--space-md);
  }
</style>
